@model Models.ViewModels.ExcelLoan.UploadFileViewModel
@{
    ViewData["Title"] = "Upload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("UploadMapperFile", "ExcelLoan", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    <div class="panel panel-danger" style="margin-top:30px;">
        <div class="panel-heading">Upload Mapper File</div>
        <div class="panel-body">
            <div class="row" style="margin-top:30px;">
                <div class="col-md-4">
                    File Type:
                </div>
                <div class="col-md-8">
                    @Html.DropDownListFor(Model => Model.FileTypeID, Model.UploadFileTypes, new { @class = "form-control" })
                </div>
            </div>

            <div class="row" style="margin-top:30px;">
                <div class="col-md-4">
                    File:
                </div>
                <div class="col-md-8">
                    <div class="custom-file">
                        @Html.TextBoxFor(Model => Model.UploadFile, new { @type = "file", @class = "form-control" })

                    </div>
                </div>
            </div>

            <div class="row" style="margin-top:30px;">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-5"></div>
                        <div class="col-md-2">
                            <input type="submit" class="btn btn-success" />
                        </div>
                        <div class="col-md-5"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

